# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=alocacao_turmas

# Server
# Internal app port (binding). In Docker this is APP_PORT.
PORT=3000
NODE_ENV=development
SWAGGER_DISABLED=false

# When running via docker-compose, you can override these in a local .env:
# - APP_PORT controls the port inside the container (default 3000)
# - HOST_PORT controls the port exposed on your host (default 3000)
# - PUBLIC_PORT is used only for logs/URLs; defaults to HOST_PORT
# APP_PORT=3000
# HOST_PORT=3000
# PUBLIC_PORT=3000

# JWT
JWT_SECRET=sua_chave_secreta_muito_forte_aqui
JWT_EXPIRES_IN=7d

# CORS
# Set to your frontend URL. If you expose the backend on HOST_PORT=3000, update it accordingly.
CORS_ORIGIN=http://localhost:3000
